<h1>Burgers!</h1>

<h2>Burgers Available</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}

    {{/unless}}
  {{/each}}
</ul>

<h2>Already devoured</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burg</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burg Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Awake
  </div>

  <button type="submit">Add Burg</button>
</form>